<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCCCC"
    >
    <RelativeLayout
        android:id="@+id/relative_change"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="#ffffff"
        >

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_30"
            android:padding="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/text_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="访客登记"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_25"
            android:textSize="@dimen/sp_20"
            />
        <TextView
            android:id="@+id/tv_visitor_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="访客记录"
            android:textColor="@color/transparent"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_20"
            android:padding="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            />
    </RelativeLayout>
    <View
        android:id="@+id/view_fangzhurenzheng_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/relative_change"
        />
    <RelativeLayout
        android:id="@+id/relative_red"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_below="@+id/view_fangzhurenzheng_one"
        android:background="#EFD5D6"
        >
        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="填写访客车牌号可自动识别开闸，无需下车登记"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_25"
            android:textColor="#FB4243"
            />
        <ImageView
            android:id="@+id/icon_error"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_centerVertical="true"
            />


    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_visitor_registration"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_below="@+id/relative_red"
        >
    </android.support.v7.widget.RecyclerView>


    <LinearLayout
        android:id="@+id/linear_rz_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:orientation="vertical"
        android:background="@drawable/shape_login"
        android:layout_below="@+id/recycle_visitor_registration"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        >
    <RelativeLayout
        android:id="@+id/relative_visitor_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">
        <TextView
            android:id="@+id/tv_visitor_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="受访时间:"
            android:textColor="@color/transparent"
            android:textSize="@dimen/sp_14"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            />
        <TextView
            android:id="@+id/edit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="只限明天(2019-09-14)"
            android:layout_centerVertical="true"
            android:background="@null"
            android:textSize="@dimen/sp_14"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/tv_visitor_time"
            android:layout_marginLeft="@dimen/dp_5"
            />
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/next"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerVertical="true"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/transparent"
            android:layout_below="@+id/edit_name"
            android:layout_marginTop="@dimen/dp_20"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_visitor_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入访客姓名"
            android:textColor="@color/transparent"
            android:textSize="@dimen/sp_14"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            />
        <ImageView
            android:id="@+id/edit_phone"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="@dimen/dp_15"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#CCCCCC"
            android:layout_below="@+id/edit_phone"
            android:layout_marginTop="@dimen/dp_20"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_visitor_phonenumber"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入访客手机号"
            android:textColor="@color/transparent"
            android:textSize="@dimen/sp_14"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            />

    </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linear_rz_one"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/shape_login"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="访客车牌号"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B3B3B3"
                android:text="(选填)"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <EditText
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="@dimen/dp_50"
                    android:background="@drawable/shape_line"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:hint="省"
                    android:gravity="center"
                    />
            <EditText
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_50"
                android:background="@drawable/shape_line"
                android:paddingLeft="@dimen/dp_5"
                android:gravity="center"
                />
            <EditText
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_50"
                android:background="@drawable/shape_line"
                android:paddingLeft="@dimen/dp_5"
                android:gravity="center"
                />
            <EditText
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_50"
                android:background="@drawable/shape_line"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_5"
                />
            <EditText
                android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_50"
                android:background="@drawable/shape_line"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_5"
            />
            <EditText
                android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_50"
                android:background="@drawable/shape_line"
                android:paddingLeft="@dimen/dp_5"
            />
            <EditText
                android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_50"
                android:background="@drawable/shape_line"
                android:paddingLeft="@dimen/dp_5"
            />
            <EditText
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_50"
                android:background="@drawable/shape_line"
                android:gravity="center"
            />



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_xu"
                >
                  <ImageView
                      android:layout_width="@dimen/dp_10"
                      android:layout_height="@dimen/dp_10"
                      android:src="@mipmap/ic_launcher"
                      android:layout_centerVertical="true"
                      />
                <EditText
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_50"
                    android:background="@drawable/shape_dash"
                    android:gravity="center"
                    android:hint="新能源"


                    />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="访客照片"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B3B3B3"
                android:text="(选填)"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                />

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/relative_take_photo"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_90"
            android:background="@drawable/shape_grey"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            >
            <ImageView
                android:id="@+id/icon_head"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:src="@mipmap/ic_launcher"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit_visitor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/renzheng_shape"
        android:text="@string/btn_submit"
        android:textSize="@dimen/sp_12"
        android:textColor="#ffffff"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
