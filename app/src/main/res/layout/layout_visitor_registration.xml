<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCCCC"
    >
    <RelativeLayout
        android:id="@+id/relative_change"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="#ffffff"
        >

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_back"
            android:layout_marginLeft="@dimen/dp_20"
            android:padding="@dimen/dp_10"
            />


        <TextView
            android:id="@+id/text_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="访客登记"
            android:layout_centerHorizontal="true"
            android:textColor="#000"
            android:textSize="@dimen/sp_16"

            />
        <TextView
            android:id="@+id/tv_visitor_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="访客记录"
            android:textColor="#999"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_5"
            android:textSize="@dimen/sp_14"
            android:layout_marginRight="@dimen/dp_10"
            />
    </RelativeLayout>
    <View
        android:id="@+id/view_fangzhurenzheng_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/relative_change"
        />
    <RelativeLayout
        android:id="@+id/relative_red"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_below="@+id/view_fangzhurenzheng_one"
        android:background="#EFD5D6"
        >
        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="填写访客车牌号可自动识别开闸，无需下车登记"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_25"
            android:textColor="#ff0000"
            android:textSize="@dimen/sp_12"
            />
        <ImageView
            android:id="@+id/icon_error"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:src="@mipmap/close"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_centerVertical="true"
            />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_renz"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_below="@+id/relative_red"
        >
        <LinearLayout
            android:id="@+id/linear_home_ren"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:orientation="vertical"
            android:background="@drawable/shape_white"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:visibility="gone"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_add"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加房屋认证"
                android:textSize="@dimen/sp_16"
                android:textColor="#07A0F0"
                android:layout_gravity="center_horizontal"

                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/shape_white"
            >
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="受访地址"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/blacks"
                android:layout_marginLeft="@dimen/dp_15"
                />

            <View
                android:id="@+id/view_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#808080"
                android:layout_below="@+id/tv_address"
                android:layout_marginTop="@dimen/dp_10"
                />

            <TextView
                android:id="@+id/tv_commiunty_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公祥街15号楼1-1302"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/blacks"
                android:layout_below="@+id/view_address"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                />

            <ImageView
                android:id="@+id/icon_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/next"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_35"
                android:layout_marginRight="@dimen/dp_10"
                android:padding="@dimen/dp_10"

                />

        </RelativeLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linear_rz_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_165"
        android:orientation="vertical"
        android:background="@drawable/shape_white"
        android:layout_below="@+id/relative_renz"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        >
    <RelativeLayout
        android:id="@+id/relative_visitor_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55">
        <TextView
            android:id="@+id/tv_visitor_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="受访时间:"
            android:textColor="#999"
            android:textSize="@dimen/sp_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="只限明天(2019-09-14)"
            android:layout_centerVertical="true"
            android:background="@null"
            android:textSize="@dimen/sp_16"
            android:textColor="#333"
            android:layout_toRightOf="@+id/tv_visitor_time"
            android:layout_marginLeft="@dimen/dp_5"
            />
        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:src="@mipmap/next"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerVertical="true"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#808080"
            android:layout_below="@+id/tv_time"
            android:layout_marginTop="@dimen/dp_10"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_visitor_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55">
        <EditText
            android:id="@+id/edit_ivationame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入访客姓名"
            android:textColor="#999"
            android:textSize="@dimen/sp_16"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            />
        <ImageView
            android:id="@+id/edit_phone"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/phone_people"
            android:layout_marginRight="@dimen/dp_10"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#808080"
            android:layout_below="@+id/edit_ivationame"
            android:layout_marginTop="@dimen/dp_10"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_visitor_phonenumber"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55">
        <EditText
            android:id="@+id/edit_ivphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入访客手机号"
            android:textColor="#808080"
            android:textSize="@dimen/sp_16"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            />

    </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_carnumber"
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_220"
        android:orientation="vertical"
        android:layout_below="@+id/linear_rz_one"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/shape_white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:text="访客车牌号"
                android:textSize="@dimen/sp_16"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999"
                android:text="(选填)"
                android:textSize="@dimen/sp_16"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_14"
            >

            <EditText
                    android:id="@+id/edit_car_one"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_40"
                    android:background="@drawable/shape_line"
                    android:hint="省"
                    android:gravity="center"
                    />
            <EditText
                android:id="@+id/edit_car_two"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/shape_line"
                android:layout_marginLeft="@dimen/dp_6"
                android:gravity="center"
                />
            <EditText
                android:id="@+id/edit_car_three"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/shape_line"
                android:layout_marginLeft="@dimen/dp_6"
                android:gravity="center"
                />
            <EditText
                android:id="@+id/edit_car_four"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/shape_line"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_6"
                />
            <EditText
                android:id="@+id/edit_car_five"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/shape_line"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_6"
            />
            <EditText
                android:id="@+id/edit_car_six"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/shape_line"
                android:layout_marginLeft="@dimen/dp_6"
            />
            <EditText
                android:id="@+id/edit_car_seven"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/shape_line"
                android:layout_marginLeft="@dimen/dp_6"
            />
            <EditText
                android:id="@+id/edit_car_eight"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/shape_line"
                android:layout_marginLeft="@dimen/dp_6"
                android:gravity="center"
            />


                <LinearLayout
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_40"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/shape_xu"
                    android:layout_marginLeft="@dimen/dp_6"
                    >

                    <ImageView
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_10"
                        android:src="@mipmap/add"

                        />
                    <EditText
                        android:id="@+id/edit_car_nine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColorHint="#999"
                        android:background="@null"
                        android:textSize="@dimen/sp_8"
                        android:hint="新能源"

                        />

                </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:text="访客照片"
                android:textSize="@dimen/sp_16"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999"
                android:text="(选填)"
                android:textSize="@dimen/sp_16"
                android:layout_marginLeft="@dimen/dp_20"
                />

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/relative_take_photo"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:background="@drawable/shape_grey"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            >
            <ImageView
                android:id="@+id/icon_head"
                android:layout_width="@dimen/dp_40"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_add"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit_visitor"
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_45"
        android:background="@drawable/renzheng_shape"
        android:text="@string/btn_submit"
        android:textSize="@dimen/sp_16"
        android:textColor="#fff"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_below="@+id/lin_carnumber"
        />

</RelativeLayout>
