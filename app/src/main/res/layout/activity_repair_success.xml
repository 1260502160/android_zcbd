<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CCCCCC"
    tools:context=".activity.SubmitSuccActivity">

    <RelativeLayout
        android:id="@+id/relative_change"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:background="#ffffff"
        >

        <TextView
            android:id="@+id/text_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交成功"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_20"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_300"
        android:orientation="vertical"
        android:background="@drawable/shape_login"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        >


        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_80"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付成功！"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/blue"
            android:layout_marginTop="@dimen/dp_40"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工作人员会尽快与您联系"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_16"
            android:textColor="#333333"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_lookdeail"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/renzheng_shape"
            android:text="查看详情"
            android:layout_marginTop="@dimen/dp_100"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp_25"
            />
        <Button
            android:id="@+id/btn_homeback"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/shape_blue"
            android:text="@string/text_backhome"
            android:layout_marginLeft="@dimen/dp_25"
            android:textColor="@color/blue"
            android:layout_marginTop="@dimen/dp_100"
            />

    </LinearLayout>

</LinearLayout>