<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    >

    <ImageView
        android:id="@+id/icon_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icontext"
        android:layout_marginTop="@dimen/dp_87"
        android:layout_marginLeft="@dimen/dp_96"
        />
    <RelativeLayout
        android:id="@+id/rela_login"
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_150"
        android:layout_below="@+id/icon_start"
        android:background="@drawable/shape_login"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_34"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_login"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_22"
            />
        <ImageView
            android:id="@+id/icon_account_number"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:src="@mipmap/my"
            android:layout_marginLeft="@dimen/dp_29"
            android:layout_marginTop="@dimen/dp_40"
            />


        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_account_number"
            android:layout_marginTop="@dimen/dp_40"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_toRightOf="@+id/icon_account_number"
            android:background="@null"

            />
        <View
            android:id="@+id/view_login"
            android:layout_width="@dimen/dp_290"
            android:layout_height="@dimen/dp_1"
            android:background="#b2b2b2"
            android:layout_below="@+id/edit_phone"
             android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            />

        <ImageView
            android:id="@+id/icon_pass"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:src="@mipmap/lock"
            android:layout_below="@+id/view_login"
            android:layout_marginLeft="@dimen/dp_29"
            android:layout_marginTop="@dimen/dp_21"
            />
        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_login"
            android:hint="@string/edit_pass"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_21"
            android:background="@null"
            android:layout_toRightOf="@+id/icon_pass"
            android:layout_marginLeft="@dimen/dp_14"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@+id/rela_login"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/renzheng_shape"
        android:text="@string/btn_login"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        />
    <TextView
        android:id="@+id/text_forgetpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_forget"
        android:layout_below="@+id/btn_login"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_15"
        android:textColor="@color/blue"
        android:textSize="@dimen/sp_12"
        android:padding="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/text_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_right_register"
        android:layout_below="@+id/btn_login"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_25"
        android:textColor="@color/blue"
        android:textSize="@dimen/sp_12"
        android:padding="@dimen/dp_10"
        android:layout_alignParentRight="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/text_register"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_80"
        >

    <ImageView
        android:id="@+id/icon_wechat"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:src="@mipmap/wechat"
        android:layout_centerHorizontal="true"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_weichat"
        android:textColor="#666666"
        android:textSize="@dimen/sp_12"
        />

    </LinearLayout>

</RelativeLayout>
