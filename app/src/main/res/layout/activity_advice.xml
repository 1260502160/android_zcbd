<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_grey"
    tools:context=".activity.FeedbackActivity">

    <RelativeLayout
        android:id="@+id/relative_change"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:background="#ffffff"
        >

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:padding="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/text_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_feedback"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_20"
            />
    </RelativeLayout>
    <View
        android:id="@+id/view_feedback_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/relative_change"
        android:background="#CCCCCC"
        />

    <TextView
        android:id="@+id/text_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_feedbackcontent"
        android:layout_below="@+id/view_feedback_one"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:textSize="@dimen/sp_14"
        android:textColor="#000000"
        />
    <RelativeLayout
        android:id="@+id/relative_feedback"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:layout_below="@+id/text_feedback"
        android:background="@drawable/shape_white"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        >

        <EditText
            android:id="@+id/edit_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="感谢您的反馈，我们会第一时间处理"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/blacks"
            android:textColorHint="@color/blacks"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_15"
            />
        <View
            android:id="@+id/view_advice"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/transparent"
            android:layout_centerInParent="true"
            />

        <TextView
            android:id="@+id/text_feedback_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/200"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_above="@+id/view_advice"
            android:layout_marginBottom="@dimen/dp_10"
            />


        <RelativeLayout
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_advice"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_dash"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            >

            <ImageView
                android:id="@+id/icon_feedback_add"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/icon_add"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>


    </RelativeLayout>


    <Button
        android:id="@+id/btn_feedback_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentBottom="true"
        android:background="@drawable/renzheng_shape"
        android:text="@string/btn_submit"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        />
</RelativeLayout>