<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20"
    tools:context=".activity.PaymentActivity">

    <RelativeLayout
        android:id="@+id/rl_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_address_title_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货地址（必填）" />

        <TextView
            android:id="@+id/tv_address_name_phone_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_address_title_payment"
            android:text="李晓明 170******1234" />

        <TextView
            android:id="@+id/tv_address_address_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_address_name_phone_payment"
            android:text="北京市朝阳区大花园地垃圾桶旁" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/next" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品信息" />

        <ImageView
            android:id="@+id/iv_img_payment"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_below="@+id/tv_name_payment"
            tools:background="#cccccc" />

        <TextView
            android:id="@+id/tv_content_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_img_payment"
            android:layout_alignBottom="@+id/iv_img_payment"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toLeftOf="@+id/tv_price_payment"
            android:layout_toRightOf="@+id/iv_img_payment"
            android:text="商品描述商品描述商品商品描述商品描述商品商品描述商品描述商品商品描述商品描述商品" />

        <TextView
            android:id="@+id/tv_price_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_img_payment"
            android:layout_alignParentRight="true"
            android:text="¥49" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_img_payment"
            android:layout_alignParentRight="true"
            android:text="x1" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_img_payment"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_weight="1"
            android:text="购买数量" />

        <TextView
            android:id="@+id/tv_payment_jian_count"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:background="#cccccc"
            android:gravity="center"
            android:text="-"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_payment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLength="2"
            android:minWidth="@dimen/dp_20"
            android:text="1" />

        <TextView
            android:id="@+id/tv_payment_add_count"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:background="#cccccc"
            android:gravity="center"
            android:text="+"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="付款信息"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="需支付："
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_payment_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="¥49"
            android:textColor="#f00" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单备注"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/et_remake_payment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="请输入备注" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_44"
        android:gravity="center_vertical"
        android:text="支付方式 "
        android:textColor="#000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_below="@+id/view_pay_money"
        android:layout_marginTop="@dimen/dp_5">

        <ImageView
            android:id="@+id/weixin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@mipmap/weixinpay" />

        <TextView
            android:id="@+id/wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toRightOf="@id/weixin"
            android:text="微信支付"
            android:textColor="#666666"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/wx"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_30" />

        <ImageView
            android:id="@+id/zhifubao"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/weixin"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@mipmap/zfpay" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wx"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_toRightOf="@id/zhifubao"
            android:text="支付宝支付"
            android:textColor="#666666"
            android:textSize="14sp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <RadioButton
                android:id="@+id/wexin_check_balance"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/chose_pay_type"
                android:button="@null"
                android:checked="true" />

            <RadioButton
                android:id="@+id/zfpay_check_balance"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/chose_pay_type"
                android:button="@null" />
        </RadioGroup>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="总计： "
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_all_payment_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:text="¥49 "
            android:textColor="#f00" />

        <TextView
            android:id="@+id/tv_pay_payment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#90fff000"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="确认支付 "
            android:textColor="#000000" />
    </LinearLayout>
</LinearLayout>