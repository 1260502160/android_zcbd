<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MyFragment">

    <RelativeLayout
        android:id="@+id/my_fragment_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_140"
        android:background="@drawable/gient_shape">

        <TextView
            android:id="@+id/tv_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_34"
            android:text="我的"
            android:textColor="#fff"
            android:textSize="@dimen/sp_16" />


    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card_my_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_64"
        android:layout_marginRight="@dimen/dp_15"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp">

        <RelativeLayout
            android:id="@+id/relative_my_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_white">

            <com.abner.ming.base.view.CircleImageView
                android:id="@+id/icon_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_25"
                android:src="@drawable/icon_head_default" />

            <TextView
                android:id="@+id/text_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_toRightOf="@+id/icon_my"
                android:text="Admin"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_sf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_admin"
                android:layout_alignLeft="@+id/text_admin"
                android:layout_marginTop="@dimen/dp_5"
                android:text="房主"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@mipmap/next" />

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_40"
                android:src="@mipmap/my_ewn" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <View
        android:id="@+id/view_my_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@+id/my_fragment_rl"
        android:background="@color/line_color" />

    <LinearLayout
        android:id="@+id/relative_my_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_below="@+id/view_my_one"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linear_my_one"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_fangzhurenzheng"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/homeren" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@string/text_homerenzheng" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_my_two"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_zhuhuguanli"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/hostrenzheng" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="住户认证" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_my_three"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_carinfo"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/car" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@string/text_carinformation" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/view_my_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_7"
        android:layout_below="@+id/relative_my_two"
        android:background="@color/line_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_my_two"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/rel_my_indent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60">

            <ImageView
                android:id="@+id/icon_fangkejilu"
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_19"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:src="@mipmap/myindent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_toRightOf="@+id/icon_fangkejilu"
                android:text="我的订单"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@mipmap/next" />

        </RelativeLayout>

        <View
            android:id="@+id/view_my_fangkejilu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/rel_my_indent"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_9"
            android:background="#ececec" />

        <RelativeLayout
            android:id="@+id/rel_visitor_record"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_below="@+id/view_my_fangkejilu">

            <ImageView
                android:id="@+id/icon_baoxiujilu"
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_19"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:src="@mipmap/visitorrecord" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_toRightOf="@+id/icon_baoxiujilu"
                android:text="访客记录"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@mipmap/next" />
        </RelativeLayout>

        <View
            android:id="@+id/view_my_jiaofeijilu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/rel_visitor_record"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_9"
            android:background="#ececec" />

        <RelativeLayout
            android:id="@+id/rel_repair_record"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_below="@+id/view_my_jiaofeijilu">

            <ImageView
                android:id="@+id/icon_jiaofeijilu"
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_19"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:src="@mipmap/repairrecord" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_toRightOf="@+id/icon_jiaofeijilu"
                android:text="报修记录"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@mipmap/next" />

        </RelativeLayout>


        <View
            android:id="@+id/view_jiaofeijilu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/rel_repair_record"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_9"
            android:background="#ececec" />


        <RelativeLayout
            android:id="@+id/rel_jiaofeijilu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_below="@+id/view_jiaofeijilu">

            <ImageView
                android:id="@+id/icon_jfjl"
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_19"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:src="@mipmap/paymoneyrecord" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_toRightOf="@+id/icon_jfjl"
                android:text="缴费记录"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@mipmap/next" />

        </RelativeLayout>

        <View
            android:id="@+id/view_my_yijianfankui"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/rel_jiaofeijilu"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_9"
            android:background="#ececec" />

        <RelativeLayout
            android:id="@+id/rel_my_yijianfankui"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_below="@+id/view_my_yijianfankui">

            <ImageView
                android:id="@+id/icon_yijianfankui"
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_19"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:src="@mipmap/feedback" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_toRightOf="@+id/icon_yijianfankui"
                android:text="@string/text_yijianfankui"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@mipmap/next" />

        </RelativeLayout>

        <View
            android:id="@+id/view_my_lianxikefu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/rel_my_yijianfankui"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="#ececec" />

        <RelativeLayout
            android:id="@+id/rel_my_lianxikefu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_below="@+id/view_my_lianxikefu">

            <ImageView
                android:id="@+id/icon_lianxikefu"
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_19"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:src="@mipmap/coustomersevice" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_toRightOf="@+id/icon_lianxikefu"
                android:text="@string/text_lianxikefu"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@mipmap/next" />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>