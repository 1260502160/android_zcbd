<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PaySucceActivity">


    <LinearLayout
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_240"
        android:orientation="vertical"
        android:background="@drawable/shape_login"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_9"
        >


        <ImageView
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_58"
            android:src="@mipmap/right"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_80"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付成功！"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/blue"
            android:layout_marginTop="@dimen/dp_40"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="建议您十五分钟内驶离，否则会重新开始计费"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_16"
            android:textColor="#333333"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"
        >

        <Button
            android:id="@+id/btn_lookdeail"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_45"
            android:background="@drawable/renzheng_shape"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="@dimen/dp_15"
            />
        <Button
            android:id="@+id/btn_homeback"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_45"
            android:background="@drawable/shape_blue"
            android:text="@string/text_backhome"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="@dimen/dp_25"
            android:textColor="@color/blue"
            />

    </LinearLayout>

</LinearLayout>