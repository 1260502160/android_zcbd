<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.GoodsDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/iv_good_img_goods_details"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_283"
                android:scaleType="centerCrop"
                tools:background="@color/line_color" />

            <ImageView
                android:id="@+id/icon_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_33"
                android:padding="@dimen/dp_10"
                android:src="@mipmap/icon_back" />

            <LinearLayout
                android:id="@+id/ll_price_goods_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_good_img_goods_details"
                android:layout_marginTop="@dimen/dp_12"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_store_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="￥9.9"
                    android:textColor="@color/color_FF0000"
                    android:textSize="@dimen/sp_16" />


                <TextView
                    android:id="@+id/tv_trade_price"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:background="@drawable/shape_red_new"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_4"
                    android:text="批发价8.8"
                    android:textColor="@color/color_FF0000"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_store_descrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_price_goods_details"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_29"
                android:layout_marginBottom="@dimen/dp_18"
                android:ellipsize="end"
                android:lines="2"
                android:text="商品发布商品发布商品发布商品发布商品发布商品发布商品发布商商品发布商品发布商品发布商品发布商品发布商品发布商品发布商商品发布商品发布商品发布商品发布商品发布商品发布商品发布商"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14" />

            <View
                android:id="@+id/view_fangzhurenzheng_one"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_8"
                android:layout_below="@+id/tv_store_descrip"
                android:background="@color/line_color" />

            <ImageView
                android:id="@+id/icon_store"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_64"
                android:layout_below="@+id/view_fangzhurenzheng_one"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_15"
                tools:background="@color/line_color" />

            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/icon_store"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toRightOf="@+id/icon_store"
                android:text="私家果园"
                android:textColor="#333333"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_store_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/icon_store"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toRightOf="@+id/icon_store"
                android:text="商品数量:12"
                android:textColor="#333333"
                android:textSize="@dimen/sp_12" />


            <Button
                android:id="@+id/btn_forget_yancode"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_20"
                android:layout_below="@+id/view_reg_one"
                android:layout_alignTop="@+id/icon_store"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/shape_red_new"
                android:text="进店逛逛"
                android:textColor="@color/color_FF0000"
                android:textSize="@dimen/sp_12" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_goods_details"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:layout_below="@+id/icon_store"
                android:layout_marginTop="@dimen/dp_14" />

            <View
                android:id="@+id/view_two_line_details"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_8"
                android:layout_below="@+id/rv_goods_details"
                android:background="@color/line_color" />

            <ImageView
                android:id="@+id/iv_goods_details_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_two_line_details" />

            <WebView
                android:id="@+id/wb_goods_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_goods_details_details" />


        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dianpu"
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTop="@drawable/icon_dianpu_icon"
            android:gravity="center"
            android:text="店铺" />

        <TextView
            android:drawablePadding="@dimen/dp_5"
            android:id="@+id/icon_kefu"
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTop="@drawable/icon_kefu_icon"
            android:gravity="center"
            android:text="客服" />


        <LinearLayout
            android:id="@+id/ll_singleton_goods_details"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ff7f7e"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bottom_price_goods_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="￥：9.9"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="单件购买"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_wholesale_goods_details"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fe0000"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bottom_wholesale_price_goods_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="￥：8.8"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tv_bottom_wholesale_num_goods_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="批发购买（20件起）"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>