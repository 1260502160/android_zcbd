<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RepairRecordActivity">

    <RelativeLayout
        android:id="@+id/relative_change"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="#ffffff"
        >

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:padding="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/text_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_baoxiujilu"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_25"
            android:textSize="@dimen/sp_20"
            />
    </RelativeLayout>
    <View
        android:id="@+id/view_fangzhurenzheng_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/relative_change"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="#ffffff"
        android:visibility="gone"
        >
        <RadioGroup
            android:id="@+id/circle_radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_34"
            android:layout_centerInParent="true"

            >

            <RadioButton
                android:id="@+id/repair_all"
                android:layout_width="wrap_content"
                android:button="@null"
                android:layout_height="wrap_content"
                android:text="全部"
                android:textSize="@dimen/sp_15"
                android:textColor="#000000"
                android:checked="true"
                android:padding="@dimen/dp_10"
                />

            <RadioButton
                android:id="@+id/wait_agency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="待受理"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_15"
                android:textColor="#999999"
                android:padding="@dimen/dp_10"
                />
            <RadioButton
                android:id="@+id/wait_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="待付款"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_15"
                android:textColor="#999999"
                android:padding="@dimen/dp_10"
                />
            <RadioButton
                android:id="@+id/already_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="已付款"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_15"
                android:textColor="#999999"
                android:padding="@dimen/dp_10"
                />

        </RadioGroup>

        <ImageView
            android:id="@+id/iv_line1"
            android:layout_below="@id/circle_radiogroup"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="@dimen/dp_40"
            android:background="@drawable/selector_line_location"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_height="@dimen/dp_2"/>

        <ImageView
            android:id="@+id/iv_line2"
            android:layout_below="@id/circle_radiogroup"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="@dimen/dp_40"
            android:background="@drawable/selector_line_location"
            android:layout_marginLeft="@dimen/dp_100"
            android:layout_height="@dimen/dp_2"/>
        <ImageView
            android:id="@+id/iv_line3"
            android:layout_toRightOf="@id/iv_line2"
            android:layout_below="@id/circle_radiogroup"
            android:background="@drawable/selector_line_location"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_2"/>
        <ImageView
            android:id="@+id/iv_line4"
            android:layout_toRightOf="@id/iv_line3"
            android:layout_below="@id/circle_radiogroup"
            android:background="@drawable/selector_line_location"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_2"/>
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_repair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_repair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v4.view.ViewPager>
</LinearLayout>