<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SafeMangerActivity"
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110"
        android:background="@drawable/shape_login"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        >


    <RelativeLayout
        android:id="@+id/relative_phone_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"

        >
        <TextView
            android:id="@+id/text_dingdan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_phone_num"
            android:textColor="@color/blacks"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_18"
            />

        <ImageView
            android:id="@+id/icon_mydingdan"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_17"
            android:src="@mipmap/next"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_19"
            />
    </RelativeLayout>

    <View
        android:id="@+id/view_setting_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/transparent"
        android:layout_below="@+id/relative_phone_number"
        />

    <RelativeLayout
        android:id="@+id/relative_safe_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_below="@+id/view_setting_two"
        android:layout_alignParentStart="true"

       >

        <TextView
            android:id="@+id/text_qchc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_18"
            android:text="@string/text_update_pass"
            android:textColor="@color/blacks"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/icon_next"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_17"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_marginRight="@dimen/dp_12"
            android:src="@mipmap/next" />
    </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>