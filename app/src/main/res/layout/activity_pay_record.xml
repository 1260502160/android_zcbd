<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CCCCCC"
    tools:context=".activity.PayRecordActivity">

    <RelativeLayout
        android:id="@+id/relative_change"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="#ffffff"
        >

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_30"
            android:padding="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/text_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_jiaofeijilu"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_25"
            android:textSize="@dimen/sp_20"
            />
    </RelativeLayout>
    <View
        android:id="@+id/view_pay_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_below="@+id/relative_change"
        android:layout_marginTop="@dimen/dp_1"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <RelativeLayout
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/shape_login"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9月"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                />
            <ImageView
                android:id="@+id/icon_down"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:src="@mipmap/ic_launcher"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_5"
                />
            <ImageView
                android:id="@+id/icon_up"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:src="@mipmap/next"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_5"
                android:visibility="gone"
                />

        </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:background="@drawable/shape_login"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:visibility="gone"
                >

                <ImageView
                    android:id="@+id/icon_car"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/ic_launcher"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    />

                <TextView
                    android:id="@+id/tv_stopmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_stopcar"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#000000"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_toRightOf="@+id/icon_car"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="季度预存"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#000000"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_toRightOf="@+id/tv_stopmoney"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019-09-01"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/transparent"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_toRightOf="@+id/icon_car"
                    android:layout_below="@+id/tv_stopmoney"
                    android:layout_marginLeft="@dimen/dp_10"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$450.00"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_centerVertical="true"
                    android:textColor="@color/transparent"
                    />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>