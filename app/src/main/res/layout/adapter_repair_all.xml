<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:background="@drawable/shape_white"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        >


    <TextView
        android:id="@+id/tv_indent_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单编号:123123123123"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/tv_pay_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已付款"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_10"
        />
    <View
        android:id="@+id/view_indent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#CCCCCC"
        android:layout_below="@+id/tv_indent_number"
        android:layout_marginTop="@dimen/dp_5"
        />
    <ImageView
        android:id="@+id/icon_all_indent"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/view_indent"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/tv_descript"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="卧室空调启动异常、不制冷，按遥控器无反应"
        android:layout_below="@+id/view_indent"
        android:layout_toRightOf="@+id/icon_all_indent"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_10"
        />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北京市公祥街社区15号楼1-1302"
        android:layout_below="@+id/tv_descript"
        android:layout_toRightOf="@+id/icon_all_indent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥200.00"
        android:textColor="#FE0A09"
        android:layout_below="@+id/tv_address"
        android:layout_toRightOf="@+id/icon_all_indent"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_10"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/btn_lookdeatil"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_30"
        android:text="查看详情"
        android:textColor="@color/blue"
        android:background="@drawable/shape_login"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_100"
        android:layout_marginBottom="@dimen/dp_5"
        />
    <Button
        android:id="@+id/btn_again_repari"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_30"
        android:text="再次报修"
        android:textColor="#ffffff"
        android:background="@drawable/renzheng_shape"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5"
        />

    </RelativeLayout>
</RelativeLayout>
