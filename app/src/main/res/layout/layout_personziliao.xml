<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成"
            android:textSize="@dimen/sp_16"
            android:textColor="#333"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:padding="@dimen/dp_10"
            />

        <LinearLayout
            android:layout_width="@dimen/dp_345"
            android:layout_height="@dimen/dp_220"
            android:orientation="vertical"
            android:background="@drawable/shape_white"
            android:layout_marginTop="@dimen/dp_73"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            >

            <RelativeLayout
                android:id="@+id/relative_two"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:orientation="horizontal"
                android:background="@drawable/shape_white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="@string/text_head"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:id="@+id/myicon"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

            <View
                android:id="@+id/view_two"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/transparent"
                />

            <RelativeLayout
                android:id="@+id/relative_three"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                >

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_name"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_18"
                    />
                <EditText
                    android:id="@+id/edit_myname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/text_hint_name"
                    android:textSize="@dimen/sp_16"
                    android:background="@null"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_19"
                    />

            </RelativeLayout>
            <View
                android:id="@+id/view_three"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/transparent"
                />

            <RelativeLayout
                android:id="@+id/relative_four"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55">
                <TextView
                    android:id="@+id/text_dingdan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_phone_num"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_18"
                    />
                <TextView
                    android:id="@+id/tv_phonenumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请输入手机号码"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textSize="@dimen/sp_16"
                    />
            </RelativeLayout>
            <View
                android:id="@+id/view_four"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/transparent"
                />
            <RelativeLayout
                android:id="@+id/relative_five"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55">


            <TextView
                android:id="@+id/text_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_setting"
                android:textSize="@dimen/sp_16"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_18"
                />

            <ImageView
                android:id="@+id/icon_setting"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_17"
                android:src="@mipmap/next"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                />
            </RelativeLayout>
        </LinearLayout>


</RelativeLayout>