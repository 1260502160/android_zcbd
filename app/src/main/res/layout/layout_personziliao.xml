<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PersonalActivity">

    <View
        android:id="@+id/view_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_12"
        android:layout_below="@+id/relative_one" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_one"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/shape_white">


        <RelativeLayout
            android:id="@+id/relative_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_18"
                android:text="@string/text_head"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/myicon"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@drawable/ic_launcher_background" />

        </RelativeLayout>

        <View
            android:id="@+id/view_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/relative_two"
            android:background="@color/transparent" />

        <RelativeLayout
            android:id="@+id/relative_three"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:layout_below="@+id/view_two">

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_18"
                android:text="@string/text_name"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/edit_myname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@null"
                android:hint="@string/text_hint_name"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

        <View
            android:id="@+id/view_three"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/relative_three"
            android:background="@color/transparent" />

        <RelativeLayout
            android:id="@+id/relative_four"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:layout_below="@+id/view_three">

            <TextView
                android:id="@+id/text_dingdan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_18"
                android:text="@string/text_phone_num"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_phonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:text="请输入手机号码" />

        </RelativeLayout>


        <View
            android:id="@+id/view_four"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/relative_four"
            android:background="@color/transparent" />

        <RelativeLayout
            android:id="@+id/relative_five"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:layout_below="@+id/view_four">

            <TextView
                android:id="@+id/text_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_18"
                android:text="@string/text_setting"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/icon_setting"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_17"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@mipmap/next" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>