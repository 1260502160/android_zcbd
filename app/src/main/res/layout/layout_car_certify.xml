<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <View
        android:id="@+id/view_fangzhurenzheng_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/line_color"
        android:layout_below="@+id/relative_change"
        />

    <RelativeLayout
        android:id="@+id/relative_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_fangzhurenzheng_one"
        android:background="@drawable/shape_white"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        >


        <RelativeLayout
            android:id="@+id/relative_phone_number"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"

            >
            <TextView
                android:id="@+id/text_dingdan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小区"
                android:textColor="@color/blacks"
                android:textSize="@dimen/sp_16"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/tv_commiunty_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择您的小区"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_40"
               android:layout_centerVertical="true"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp_16"
                />

            <ImageView
                android:id="@+id/icon_mydingdan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/next"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <View
            android:id="@+id/view_setting_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line_color"
            android:layout_below="@+id/relative_phone_number"
            />

        <RelativeLayout
            android:id="@+id/relative_safe_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:layout_below="@+id/view_setting_two"

           >

            <TextView
                android:id="@+id/text_qchc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:text="车牌号"
                android:layout_centerVertical="true"
                android:textColor="@color/blacks"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/tv_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入您的车牌号"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_16"
                android:background="@null"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>


        <View
            android:id="@+id/view_shopping_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line_color"
            android:layout_below="@+id/relative_safe_password"
            />

        <RelativeLayout
            android:id="@+id/relative_shopping_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_82"
            android:layout_below="@+id/view_shopping_two"

           >

            <TextView
                android:id="@+id/tv_shopping_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_centerVertical="true"
                android:text="上传行驶证"
                android:textColor="@color/blacks"
                android:textSize="@dimen/sp_16" />
            <TextView
                android:id="@+id/tv_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_centerVertical="true"
                android:text="（选填）"
                android:layout_toRightOf="@+id/tv_shopping_add"
                android:textColor="@color/transparent"
                android:textSize="@dimen/sp_16" />

            <LinearLayout
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:src="@mipmap/ic_launcher"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_20"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="行驶证"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_5"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_64"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/shape_grey"
                >
                <ImageView
                    android:id="@+id/icon_add_one"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:src="@mipmap/add"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_20"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="行驶证"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_5"
                    />

            </LinearLayout>

        </RelativeLayout>



        <View
            android:id="@+id/view_shopping_three"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line_color"
            android:layout_below="@+id/relative_shopping_address"
            />

        <RelativeLayout
            android:id="@+id/relative_car_photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_82"
            android:layout_below="@+id/view_shopping_three"
            android:layout_alignParentStart="true"

         >

            <TextView
                android:id="@+id/tv_zheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_18"
                android:text="上传车辆照片"
                android:textColor="@color/blacks"
                android:textSize="@dimen/sp_16" />
            <TextView
                android:id="@+id/tv_choose_for"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_18"
                android:text="（选填）"
                android:layout_toRightOf="@+id/tv_zheng"
                android:textColor="@color/transparent"
                android:textSize="@dimen/sp_16" />

            <LinearLayout
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:src="@mipmap/ic_launcher"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_20"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车辆照片"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_5"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_64"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_grey"
                >
                <ImageView
                    android:id="@+id/icon_add_two"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:src="@mipmap/add"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_20"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车辆照片"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_5"
                    />

            </LinearLayout>




        </RelativeLayout>

    </RelativeLayout>


    <View
        android:id="@+id/view_shopping_four"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/line_color"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_below="@+id/relative_car_photo"
        />

      <TextView
          android:id="@+id/tv_carinfo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="删除车辆信息"
          android:textColor="@color/colorAccent"
          android:layout_marginLeft="@dimen/dp_15"
          android:textSize="@dimen/sp_16"
          android:layout_marginTop="@dimen/dp_15"
          />

    <View
        android:id="@+id/view_shopping_five"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/line_color"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_below="@+id/tv_carinfo"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_40"
        >
        <Button
            android:id="@+id/btn_sure_add"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentBottom="true"
            android:text="车辆认证"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:layout_marginBottom="@dimen/dp_64"
            android:background="@drawable/renzheng_shape"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            />
    </RelativeLayout>


</LinearLayout>
