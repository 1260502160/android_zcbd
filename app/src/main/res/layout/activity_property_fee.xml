<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relative_change"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="#ffffff"
        >

        <TextView
            android:id="@+id/text_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_fee"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_25"
            android:textSize="@dimen/sp_20"
            android:textColor="#000000"
            />
    </RelativeLayout>
    <View
        android:id="@+id/view_fangzhurenzheng_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/relative_change"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#f0f0f0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_fangzhurenzheng_one"
        >
        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_18"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_20"
            android:background="@drawable/shape_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#abcdff"
                android:text="物业费"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="账单周期:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="#333333"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="2018-09-15至2019-09-14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="应缴日期:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="2019-09-14"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="应付金额:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="￥218.00元"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_170"/>

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/view_pay_money"
            android:background="@drawable/shape_login"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            >

            <ImageView
                android:id="@+id/weixin"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:src="@mipmap/weixinpay"
                android:layout_marginTop="@dimen/dp_20"
                />

            <TextView
                android:id="@+id/wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_toRightOf="@id/weixin"
                android:text="微信支付"
                android:textColor="#666666"
                android:textSize="14sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/wx"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/transparent"
                />

            <ImageView
                android:id="@+id/zhifubao"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/weixin"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="@dimen/dp_15"
                android:src="@mipmap/zfpay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wx"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_toRightOf="@id/zhifubao"
                android:text="支付宝支付"
                android:textColor="#666666"
                android:textSize="14sp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_20"
                android:padding="@dimen/dp_10"
                >

                <RadioButton
                    android:id="@+id/wexin_check_balance"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/chose_pay_type"
                    android:button="@null"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/zfpay_check_balance"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/chose_pay_type"
                    android:button="@null" />
            </RadioGroup>


        </RelativeLayout>

    </LinearLayout>


       <Button
           android:id="@+id/btn_rightpay"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_60"
           android:layout_alignParentBottom="true"
           android:background="@drawable/renzheng_shape"
           android:text="@string/text_rightpay"
           android:textColor="@color/white"
           android:textSize="@dimen/sp_12"
           android:layout_marginLeft="@dimen/dp_10"
           android:layout_marginRight="@dimen/dp_10"
           android:layout_marginBottom="@dimen/dp_20"
        />


</RelativeLayout>

