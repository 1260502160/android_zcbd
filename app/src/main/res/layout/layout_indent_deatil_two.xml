<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/relative_change"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="#ffffff"
        >

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:padding="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/text_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单详情页"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_25"
            android:textSize="@dimen/sp_20"
            />
    </RelativeLayout>
    <View
        android:id="@+id/view_fangzhurenzheng_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:orientation="vertical"
        android:background="@drawable/shape_login"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        >
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李木子  13112341234"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京市朝阳区公祥街小区15号楼1-1302"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_below="@+id/tv_name"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_login"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品信息"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <ImageView
                android:id="@+id/icon_all_indent"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:src="@mipmap/ic_launcher"
                android:layout_below="@+id/view_indent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/icon_all_indent"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/transparent"
                />

            <TextView
                android:id="@+id/tv_buycount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物流信息"
                android:layout_below="@+id/icon_all_indent"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                />

            <TextView
                android:id="@+id/tv_pay_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物流公司:"
                android:layout_below="@+id/tv_buycount"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/tv_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中通快递"
                android:layout_toRightOf="@+id/tv_pay_info"
                android:layout_below="@+id/tv_buycount"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                />

            <TextView
                android:id="@+id/tv_indent_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物流编号:"
                android:layout_below="@+id/tv_pay_info"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                />

            <View
                android:id="@+id/view_indent_one"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/tv_indent_num"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/transparent"
                />

            <TextView
                android:id="@+id/tv_indent_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单信息"
                android:textColor="#000000"
                android:textSize="@dimen/sp_12"
                android:layout_below="@+id/view_indent_one"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/text_indent_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号:"
                android:textColor="#000000"
                android:textSize="@dimen/sp_12"
                android:layout_below="@+id/tv_indent_info"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/text_indent_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1231231231231"
                android:textColor="#000000"
                android:textSize="@dimen/sp_12"
                android:layout_toRightOf="@+id/text_indent_number"
                android:layout_below="@+id/tv_indent_info"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                />

            <TextView
                android:id="@+id/text_indent_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下单时间:"
                android:textColor="#000000"
                android:textSize="@dimen/sp_12"
                android:layout_below="@+id/text_indent_num"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/text_indent_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-09-16 17::00"
                android:textColor="#000000"
                android:textSize="@dimen/sp_12"
                android:layout_toRightOf="@+id/text_indent_time"
                android:layout_below="@+id/text_indent_num"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/text_paymoney_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="付款时间:"
                android:textColor="#000000"
                android:textSize="@dimen/sp_12"
                android:layout_below="@+id/text_indent_time"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/text_pay_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-09-16 17::00"
                android:textColor="#000000"
                android:textSize="@dimen/sp_12"
                android:layout_toRightOf="@+id/text_paymoney_time"
                android:layout_below="@+id/text_indent_times"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                />
            <TextView
            android:id="@+id/text_paymoney_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付方式:"
            android:textColor="#000000"
            android:textSize="@dimen/sp_12"
            android:layout_below="@+id/text_pay_times"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_10"
            />
            <TextView
                android:id="@+id/text_pay_types"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信"
                android:textColor="#000000"
                android:textSize="@dimen/sp_12"
                android:layout_toRightOf="@+id/text_paymoney_type"
                android:layout_below="@+id/text_pay_times"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/tv_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="复制"
                android:layout_below="@+id/tv_pay_info"
                android:layout_toRightOf="@+id/tv_indent_number"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_155"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/blue"
                />
            <TextView
                android:id="@+id/tv_shifu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实付:"
                android:layout_below="@+id/text_pay_times"
                android:layout_toRightOf="@+id/text_pay_types"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_155"
                android:textSize="@dimen/sp_12"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥49"
                android:layout_below="@+id/text_pay_times"
                android:layout_toRightOf="@+id/tv_shifu"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/sp_12"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="#FF5F5F"
                />
            <Button
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_30"
                android:layout_below="@+id/tv_money"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:text="申请退款"
                android:background="@drawable/shape_blue"
                android:textColor="@color/blue"

                />
            <TextView
                android:id="@+id/tv_indent_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123123123123"
                android:textColor="#000000"
                android:textSize="@dimen/sp_12"
                android:layout_below="@+id/tv_pay_info"
                android:layout_toRightOf="@+id/tv_indent_num"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/tv_descript"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品描述商品描述商品描述商品描述商品描述…………"
                android:layout_below="@+id/view_indent"
                android:layout_toRightOf="@+id/icon_all_indent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥49"
                android:layout_below="@+id/view_indent"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_5"

                />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x1"
                android:layout_below="@+id/tv_price"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_5"
                />

        </RelativeLayout>
    </LinearLayout>




</LinearLayout>
