<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CCCCCC"
    tools:context=".activity.RepairRecordActivity">

    <RelativeLayout
        android:id="@+id/relative_change"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="#ffffff"
        >

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:padding="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/text_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_store"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_25"
            android:textSize="@dimen/sp_20"
            />

        <LinearLayout
            android:id="@+id/lin_store"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_line"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_25"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/dp_10"
            >

            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="搜索商品"
                android:textSize="@dimen/dp_9"
                android:textColor="#000000"
                android:background="@null"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_gravity="center_vertical"

                />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="#ffffff"
        >
        <RadioGroup
            android:id="@+id/store_radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_34"
            android:layout_centerInParent="true"

            >

            <RadioButton
                android:id="@+id/store_all"
                android:layout_width="wrap_content"
                android:button="@null"
                android:layout_height="wrap_content"
                android:text="全部"
                android:textSize="@dimen/sp_15"
                android:textColor="#000000"
                android:checked="true"
                android:padding="@dimen/dp_10"
                />

            <RadioButton
                android:id="@+id/entrie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="装修"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_15"
                android:textColor="#999999"
                android:padding="@dimen/dp_10"
                />
            <RadioButton
                android:id="@+id/household"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="家政"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_15"
                android:textColor="#999999"
                android:padding="@dimen/dp_10"
                />
            <RadioButton
                android:id="@+id/oil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="粮油"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_15"
                android:textColor="#999999"
                android:padding="@dimen/dp_10"
                />

            <RadioButton
                android:id="@+id/grift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="礼品"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_15"
                android:textColor="#999999"
                android:padding="@dimen/dp_10"
                />
        </RadioGroup>

        <ImageView
            android:id="@+id/iv_line1"
            android:layout_below="@id/store_radiogroup"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="@dimen/dp_40"
            android:background="@drawable/selector_line_location"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_height="@dimen/dp_2"/>

        <ImageView
            android:id="@+id/iv_line2"
            android:layout_below="@id/store_radiogroup"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="@dimen/dp_40"
            android:background="@drawable/selector_line_location"
            android:layout_marginLeft="@dimen/dp_90"
            android:layout_height="@dimen/dp_2"/>
        <ImageView
            android:id="@+id/iv_line3"
            android:layout_toRightOf="@id/iv_line2"
            android:layout_below="@id/store_radiogroup"
            android:background="@drawable/selector_line_location"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_2"/>
        <ImageView
            android:id="@+id/iv_line4"
            android:layout_toRightOf="@id/iv_line3"
            android:layout_below="@id/store_radiogroup"
            android:background="@drawable/selector_line_location"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_2"/>
        <ImageView
            android:id="@+id/iv_line5"
            android:layout_toRightOf="@id/iv_line4"
            android:layout_below="@id/store_radiogroup"
            android:background="@drawable/selector_line_location"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_2"/>
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v4.view.ViewPager>
</LinearLayout>