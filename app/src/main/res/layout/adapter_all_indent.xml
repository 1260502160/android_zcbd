<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_home_two"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginBottom="@dimen/dp_8"
    android:minHeight="@dimen/dp_164"
    app:cardCornerRadius="12dp"
    app:cardElevation="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_indent_number"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_19"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_indent_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="订单编号:123123123123"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_time_close_indent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25:35后自动关闭"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <View
            android:id="@+id/view_indent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/ll_indent_number"
            android:background="@color/line_color" />

        <ImageView
            android:id="@+id/iv_image_indent"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            android:layout_below="@+id/view_indent"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_14"
            tools:background="@color/color_ccc" />

        <TextView
            android:id="@+id/tv_descript_indent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_indent"
            android:layout_alignTop="@+id/iv_image_indent"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_17"
            android:layout_toRightOf="@+id/iv_image_indent"
            android:ellipsize="end"
            android:lines="2"
            android:text="卧室空调启动异常、不制冷，按遥控器无反应按遥控器控器无反应按遥控器无反应"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_money_left_indent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ll_all_indent_pay"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="￥49.00"
            android:textColor="@color/color_FF0000"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_price_indent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_descript_indent"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_20"
            android:text="￥49.00"
            android:textColor="@color/color_FF0000"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_count_indent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_price_indent"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_marginRight="@dimen/dp_20"
            android:text="x1"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:id="@+id/ll_all_indent_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_count_indent"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="center">

            <Button
                android:id="@+id/btn_lookdeatil_indent"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/shape_blue"
                android:text="查看详情"
                android:textColor="@color/blue"
                android:textSize="@dimen/sp_12" />

            <Button
                android:id="@+id/btn_all_indent_pay"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_24"
                android:background="@drawable/renzheng_shape"
                android:text="@string/text_rightpay"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>


