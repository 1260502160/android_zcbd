<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/dialog_wheel_cancel_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_26"
        android:gravity="center"
        android:text="取消"
        android:textColor="#999999"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/dialog_wheel_ok_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_26"
        android:gravity="center"
        android:text="确定"
        android:textColor="#f5633c"
        android:textSize="@dimen/sp_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/dialog_wheel_cancel_tv"
        android:background="#D8D8D8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_wheel_cancel_tv"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <com.sunshine.first.view.WheelView
            android:id="@+id/wheelView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.sunshine.first.view.WheelView
            android:id="@+id/wheelView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.sunshine.first.view.WheelView
            android:id="@+id/wheelView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>