<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FamilyIdentityActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/relative_id"
            android:layout_width="@dimen/dp_345"
            android:layout_height="@dimen/dp_225"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/shape_white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rel_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55">

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="@string/text_name"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16" />

                <EditText
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_13"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="请填写您的姓名"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/sp_14" />

            </RelativeLayout>

            <View
                android:id="@+id/view_my_fangkejilu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/rel_name"
                android:background="#ececec" />


            <RelativeLayout
                android:id="@+id/rel_sex"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:layout_below="@+id/view_my_fangkejilu">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="性别"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16" />

                <EditText
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_13"
                    android:background="@null"
                    android:drawableRight="@mipmap/next"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:hint="请选择性别"
                    android:minWidth="@dimen/dp_100"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />

            </RelativeLayout>

            <View
                android:id="@+id/view_zhurenzheng_two"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/rel_sex"
                android:background="#ececec" />

            <RelativeLayout
                android:id="@+id/rel_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:layout_below="@+id/view_zhurenzheng_two">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="@string/text_phone_num"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16" />

                <EditText
                    android:id="@+id/tv_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_13"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="请填写您的手机号码"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/sp_14" />

            </RelativeLayout>

            <View
                android:id="@+id/view_zhurenzheng_three"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/rel_phone"
                android:background="#ececec" />
            <!--
                <RelativeLayout
                    android:id="@+id/rel_relationship"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_zhurenzheng_three"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="与房主关系"
                        android:layout_toRightOf="@+id/icon_fangkejilu"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_16"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/tv_choose_relation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请选择"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_40"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_14"
                        android:layout_centerVertical="true"
                        />
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@mipmap/next"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_20"
                        />

                </RelativeLayout>-->

            <!--<View
                android:id="@+id/view_zhurenzheng_four"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#ececec"
                android:layout_below="@+id/rel_relationship"

                />-->


            <RelativeLayout
                android:id="@+id/rel_ID_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:layout_below="@+id/view_zhurenzheng_three">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="身份证号"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16" />

                <EditText
                    android:id="@+id/tv_ID_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_40"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="请输入您的身份证号"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_8"
                    android:src="@mipmap/ewm" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relative_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_id"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/shape_white">

            <TextView
                android:id="@+id/tv_photos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:text="上传照片"
                android:textColor="@color/blacks"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_photos"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:text="本照片作为门禁使用，建议使用近期照片"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp_12" />

            <RelativeLayout
                android:id="@+id/rela_photo"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_60"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/shape_grey">

                <ImageView
                    android:id="@+id/icon_head"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/icon_add" />

            </RelativeLayout>

            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/tv_grey"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/transparent" />


            <LinearLayout
                android:id="@+id/linear_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_line"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="上传身份证照片"
                    android:textColor="@color/blacks"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="(选填)"
                    android:textColor="#B3B3B3"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_id"
                android:layout_marginTop="@dimen/dp_10">

                <RelativeLayout
                    android:id="@+id/rela_head_takephoto"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="@dimen/dp_90"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:background="@drawable/shape_grey">

                    <ImageView
                        android:id="@+id/icon_head_found"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/icon_add" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/icon_head_found"
                        android:layout_centerInParent="true"
                        android:text="头像页" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rela_back_takephoto"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="@dimen/dp_90"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/shape_grey"

                    >

                    <ImageView
                        android:id="@+id/icon_china"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/icon_add" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/icon_china"
                        android:layout_centerInParent="true"
                        android:text="国徽苑"
                        android:textColor="#000000"
                        android:textSize="@dimen/sp_12" />

                </RelativeLayout>


            </LinearLayout>


        </RelativeLayout>


        <Button
            android:id="@+id/btn_submit"
            android:layout_width="@dimen/dp_345"
            android:layout_height="@dimen/dp_45"
            android:layout_below="@+id/relative_two"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_40"
            android:background="@drawable/renzheng_shape"
            android:text="@string/btn_submit"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

    </RelativeLayout>


</ScrollView>