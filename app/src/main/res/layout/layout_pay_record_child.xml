<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/iv_pay_record_child"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:src="@mipmap/paymoneyrecord" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_toRightOf="@+id/iv_pay_record_child"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_pay_record_child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="停车费  季度预存"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_time_pay_record_child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="2019-09-01" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_money_pay_record_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_30"
        android:text="￥450.00" />
</RelativeLayout>