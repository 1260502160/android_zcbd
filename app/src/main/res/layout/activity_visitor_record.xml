<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.VisitorRecordActivity">

    <RelativeLayout
        android:id="@+id/relative_change"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="#ffffff"
        >

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_30"
            android:padding="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/text_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="访客记录"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_25"
            android:textSize="@dimen/sp_20"
            />
    </RelativeLayout>
    <View
        android:id="@+id/view_fangzhurenzheng_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/relative_change"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="#ffffff"
        >

        <RadioGroup
            android:id="@+id/radiogroup_visitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_centerInParent="true"

            >

            <RadioButton
                android:id="@+id/empower"
                android:layout_width="wrap_content"
                android:button="@null"
                android:layout_height="wrap_content"
                android:text="授权记录"
                android:textSize="@dimen/sp_15"
                android:textColor="#000000"
                android:checked="true"
                android:padding="@dimen/dp_10"
                />

            <RadioButton
                android:id="@+id/get_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="进出记录"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_15"
                android:textColor="#999999"
                android:padding="@dimen/dp_10"
                />

        </RadioGroup>

        <ImageView
            android:id="@+id/iv_line1"
            android:layout_below="@id/radiogroup_visitor"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="@dimen/dp_80"
            android:background="@drawable/selector_line_location"
            android:layout_marginLeft="@dimen/dp_100"
            android:layout_height="@dimen/dp_2"/>
        <ImageView
            android:id="@+id/iv_line2"
            android:layout_toRightOf="@id/iv_line1"
            android:layout_below="@id/radiogroup_visitor"
            android:background="@drawable/selector_line_location"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_2"/>


    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_visitor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v4.view.ViewPager>

</LinearLayout>