<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PayDeatilActivity">

    <View
        android:id="@+id/view_fangzhurenzheng_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_below="@+id/relative_change"
        android:layout_marginTop="@dimen/dp_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_head_pay_details"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_65"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@drawable/icon_head_default" />

        <TextView
            android:id="@+id/tv_name_pay_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_18"
            android:text="北京公祥街社区物业有限公司"
            android:textColor="#000000"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_money_pay_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_14"
            android:text="-450.00"
            android:textColor="#000000"
            android:textSize="@dimen/sp_20" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_fangzhurenzheng_one"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/rel_xiaoqu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55">

            <TextView
                android:id="@+id/text_xiaoqu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_16"
                android:text="@string/text_now_state"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_state_pay_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:text="支付成功"
                android:textColor="#999999"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>

        <View
            android:id="@+id/view_my_fangkejilu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/rel_xiaoqu"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_9"
            android:background="#ececec" />


        <RelativeLayout
            android:id="@+id/rel_zhurenzheng_shenfen"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:layout_below="@+id/view_my_fangkejilu">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_16"
                android:text="@string/text_paytype"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_pay_type_pay_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:text="@string/text_weichats"
                android:textColor="#999999"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>

        <View
            android:id="@+id/view_zhurenzheng_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/rel_zhurenzheng_shenfen"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_9"
            android:background="#ececec" />


        <RelativeLayout
            android:id="@+id/rel_zhurenzheng_louhao"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:layout_below="@+id/view_zhurenzheng_two">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_16"
                android:text="@string/text_pay_classify"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_money_pay_type_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:text="@string/text_stopcar"
                android:textColor="#999999"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>


        <View
            android:id="@+id/view_zhurenzheng_three"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/rel_zhurenzheng_louhao"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_9"
            android:background="#ececec" />


        <RelativeLayout
            android:id="@+id/rel_zhurenzheng_danyuanhao"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:layout_below="@+id/view_zhurenzheng_three">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_16"
                android:text="@string/text_carnumber"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_car_number_pay_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:text="京Q123123"
                android:textColor="#999999"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>

        <View
            android:id="@+id/view_zhurenzheng_four"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/rel_zhurenzheng_danyuanhao"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_9"
            android:background="#ececec" />


        <RelativeLayout
            android:id="@+id/rel_zhurenzheng_menpaihao"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:layout_below="@+id/view_zhurenzheng_four">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_16"
                android:text="@string/text_pay_explain"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_content_pay_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:text="季度 预存"
                android:textColor="#999999"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>


        <View
            android:id="@+id/view_zhurenzheng_five"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/rel_zhurenzheng_menpaihao"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_9"
            android:background="#ececec" />


        <RelativeLayout
            android:id="@+id/rel_pay_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:layout_below="@+id/view_zhurenzheng_five">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_toRightOf="@+id/icon_fangkejilu"
                android:text="@string/text_pay_time"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_time_pay_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_40"
                android:text="2019-09-11 12:20"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>


        <View
            android:id="@+id/view_zhurenzheng_six"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/rel_pay_time"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_9"
            android:background="#ececec" />


        <RelativeLayout
            android:id="@+id/rel_indent_number"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:layout_below="@+id/view_zhurenzheng_six">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_toRightOf="@+id/icon_fangkejilu"
                android:text="@string/text_indent_number"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_pay_number_pay_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_40"
                android:text="201909111220"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>