<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7D7D7"
    >
    <RelativeLayout
        android:id="@+id/relative_change"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:background="#ffffff"
        >

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_30"
            android:padding="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/text_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_change_phone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_25"
            android:textSize="@dimen/sp_20"
            />
    </RelativeLayout>


    <View
        android:id="@+id/view_change_phone_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_below="@+id/relative_change"
        android:layout_marginTop="@dimen/dp_15"
        />
    <LinearLayout
        android:id="@+id/lin_change_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/view_change_phone_one"
        android:background="@drawable/shape_login"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        >


    <RelativeLayout
        android:id="@+id/relative_change_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="#ffffff"

        >
        <TextView
            android:id="@+id/text_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_phone_num"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_25"
            android:textSize="@dimen/sp_14"
            />
        <EditText
            android:id="@+id/edit_new_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/text_phone_number"
            android:layout_marginLeft="@dimen/dp_20"
            android:hint="@string/text_new_phone_num"
            android:background="@null"
            />
    </RelativeLayout>

    <View
        android:id="@+id/view_change_phone_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/relative_change_two"
        android:layout_marginTop="@dimen/dp_1"
        />

    <RelativeLayout
        android:id="@+id/relative_change_three"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="#ffffff"
        android:layout_below="@+id/view_change_phone_two"
        >
        <TextView
            android:id="@+id/text_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_code"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_25"
            android:textSize="@dimen/sp_14"
            android:textColor="#000000"
            />
        <EditText
            android:id="@+id/edit_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/text_code"
            android:layout_marginLeft="@dimen/dp_10"
            android:hint="@string/text_yan_code"
            android:background="@null"
            />
        <Button
            android:id="@+id/btn_huo_code"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:text="@string/text_huocode"
            android:background="@drawable/shape_blue"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/blue"
            />

    </RelativeLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:text="@string/text_sure"
        android:background="@drawable/renzheng_shape"
        android:layout_below="@+id/lin_change_phone"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"

        />

</RelativeLayout>
