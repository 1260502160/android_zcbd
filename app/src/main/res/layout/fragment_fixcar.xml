<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CCCCCC"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@drawable/shape_login"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        >

        <TextView
            android:id="@+id/text_carnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_carnumber"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"
            />
        <TextView
            android:id="@+id/text_car_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="京Q123123"
            android:layout_marginTop="@dimen/dp_30"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_60"
            />
        <ImageView
            android:id="@+id/icon_carnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/next"
            android:padding="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_19"
            />

    </RelativeLayout>
       <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:background="@drawable/shape_login"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        >

        <TextView
            android:id="@+id/text_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_yucunzhouqi"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"
            />
        <View
            android:id="@+id/view_stopcar_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"

            android:background="#CCCCCC"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/text_cycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="季"
            android:layout_marginTop="@dimen/dp_30"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_60"
            />

        <ImageView
            android:id="@+id/icon_cycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/next"
            android:padding="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"

            />


        <TextView
            android:id="@+id/text_yucunzhouqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_money"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"
            android:layout_below="@+id/view_stopcar_two"
            />

        <TextView
            android:id="@+id/text_yczhouqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥450.00"
            android:layout_marginTop="@dimen/dp_35"
            android:textColor="#FE3A3B"
            android:textSize="@dimen/sp_14"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_below="@+id/view_stopcar_two"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <Button
        android:id="@+id/btn_right_pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:text="@string/text_rightpay"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_40"
        android:background="@drawable/renzheng_shape"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        />
    </RelativeLayout>

</LinearLayout>