<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/rela_regist"
        android:layout_width="@dimen/dp_345"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_56"
        >

        <TextView
            android:id="@+id/tv_forget_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_phone"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:textSize="@dimen/sp_16"
            android:textColor="#333"
            />

        <EditText
            android:id="@+id/edit_forget_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:hint="输入手机号"
            android:background="@null"
            android:textColorHint="@color/grey"
            android:layout_marginTop="@dimen/dp_20"
            android:textSize="@dimen/sp_16"
            android:layout_marginRight="@dimen/dp_18"
            />
        <View
            android:id="@+id/view_reg_one"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/transparent"
            android:layout_below="@+id/tv_forget_phone"
            android:layout_marginTop="@dimen/dp_19"
            />

        <EditText
            android:id="@+id/edit_forget_passwords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/text_yan_code"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:textSize="@dimen/sp_16"
            android:background="@null"
            android:textColor="@color/blacks"
            android:layout_below="@+id/view_reg_one"
            />

        <Button
            android:id="@+id/btn_forget_yancode"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:text="获取验证码"
            android:textColor="@color/blue"
            android:background="@drawable/shape_blue"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_below="@+id/view_reg_one"
            />

        <View
            android:id="@+id/view_reg_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/transparent"
            android:layout_below="@+id/edit_forget_passwords"
            android:layout_marginTop="@dimen/dp_19"
            />
        <TextView
            android:id="@+id/edit_forget_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_new_pass"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/blacks"
            android:layout_below="@+id/view_reg_two"
            />
        <EditText
            android:id="@+id/edit_forget_newpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:hint="输入新密码"
            android:background="@null"
            android:textColorHint="@color/grey"
            android:layout_below="@+id/view_reg_two"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_18"
            />
        <View
            android:id="@+id/view_reg_three"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/transparent"
            android:layout_below="@+id/edit_forget_newpass"
            android:layout_marginTop="@dimen/dp_19"
            />
        <TextView
            android:id="@+id/edit_sure_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_sure_pass"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/blacks"
            android:layout_below="@+id/view_reg_three"
            />

        <EditText
            android:id="@+id/edit_surenewpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:hint="@string/text_sure_pass"
            android:background="@null"
            android:layout_below="@+id/view_reg_three"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_18"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_reg_sure"
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@+id/rela_regist"
        android:layout_marginTop="@dimen/dp_95"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/renzheng_shape"
        android:text="@string/text_sure"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        />

</RelativeLayout>
