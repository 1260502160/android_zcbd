<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_back"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:padding="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/text_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_forget"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_25"
        android:textSize="@dimen/sp_20"
        />
    <View
        android:id="@+id/view_forget"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/text_forget"
        android:layout_marginTop="@dimen/dp_5"
        android:background="#cccccc"
        />
    <EditText
        android:id="@+id/edit_forget_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_forget"
        android:hint="@string/edit_phone"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_30"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_forget_phone"
        >
        <EditText
            android:id="@+id/edit_forget_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/text_code"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_30"
            android:textSize="@dimen/sp_16"
            />

        <TextView
            android:id="@+id/text_huocode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_huocode"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_25"
            />
        <EditText
            android:id="@+id/edit_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/text_login_pass"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_30"
            android:textSize="@dimen/sp_16"
            android:layout_below="@+id/edit_forget_password"
            />
        <EditText
            android:id="@+id/edit_sure_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/text_sure_pass"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_30"
            android:textSize="@dimen/sp_16"
            android:layout_below="@+id/edit_login_password"
            />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_50"
            android:layout_below="@+id/edit_sure_password"
            android:layout_marginTop="@dimen/dp_100"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/shape_login"
            android:text="@string/text_right_register"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_register_xieyi"
            android:layout_below="@+id/btn_login"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            />

    </RelativeLayout>

</RelativeLayout>
