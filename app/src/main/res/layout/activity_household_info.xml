<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FangkeDeatil">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_fangzhurenzheng_one"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/shape_white">

            <RelativeLayout
                android:id="@+id/rel_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70">

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_toRightOf="@+id/icon_fangkejilu"
                    android:text="@string/text_name"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_40"
                    android:gravity="center_vertical"
                    android:text="李木子"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14"

                    />

            </RelativeLayout>

            <View
                android:id="@+id/view_my_fangkejilu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/rel_name"
                android:background="#ececec"

                />

            <RelativeLayout
                android:id="@+id/rel_sex"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_below="@+id/view_my_fangkejilu">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_toRightOf="@+id/icon_fangkejilu"
                    android:text="性别"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_40"
                    android:gravity="center_vertical"
                    android:text="男"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14"

                    />

            </RelativeLayout>

            <View
                android:id="@+id/view_zhurenzheng_two"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/rel_sex"
                android:background="#ececec"

                />


            <RelativeLayout
                android:id="@+id/rel_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_below="@+id/view_zhurenzheng_two">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_toRightOf="@+id/icon_fangkejilu"
                    android:text="@string/text_phone_num"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_40"
                    android:gravity="center_vertical"
                    android:text="@string/text_phone_number"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />

            </RelativeLayout>


            <View
                android:id="@+id/view_zhurenzheng_four"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/rel_phone"
                android:background="#ececec"

                />


            <RelativeLayout
                android:id="@+id/rel_ID_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_below="@+id/view_zhurenzheng_four">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_toRightOf="@+id/icon_fangkejilu"
                    android:text="身份证号"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_idnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_40"
                    android:gravity="center_vertical"
                    android:text="110110*********1234"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14"

                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_300"
                android:layout_below="@+id/rel_ID_number"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/shape_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="身份证照片"
                        android:textColor="#000000"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="(选填)"
                        android:textColor="#B3B3B3"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20">

                    <RelativeLayout
                        android:layout_width="@dimen/dp_150"
                        android:layout_height="@dimen/dp_90"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:background="@drawable/shape_grey">

                        <ImageView
                            android:id="@+id/icon_head"
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/icon_add" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/icon_head"
                            android:layout_centerInParent="true"
                            android:text="头像页" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/dp_150"
                        android:layout_height="@dimen/dp_90"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@drawable/shape_grey"

                        >

                        <ImageView
                            android:id="@+id/icon_china"
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/icon_add" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/icon_china"
                            android:layout_centerInParent="true"
                            android:text="国徽苑" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="人脸照片"
                        android:textColor="#000000"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="(选填)"
                        android:textColor="#B3B3B3"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="@dimen/dp_90"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/shape_grey"

                    >

                    <ImageView
                        android:id="@+id/icon_home_zm"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_10"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/icon_add" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/icon_home_zm"
                        android:layout_centerInParent="true"
                        android:text="房屋证明" />

                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</ScrollView>