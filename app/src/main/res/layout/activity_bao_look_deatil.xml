<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CCCCCC"
    tools:context=".activity.BaoLookDeatilActivity">

    <RelativeLayout
        android:id="@+id/relative_change"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="#ffffff"
        >

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_30"
            android:padding="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/text_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_baoxiudeail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_25"
            android:textSize="@dimen/sp_20"
            />
    </RelativeLayout>
    <View
        android:id="@+id/view_fangzhurenzheng_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"
        />
    <RelativeLayout
        android:id="@+id/relative_baodetail_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@drawable/descrip_shape"
        >

        <TextView
            android:id="@+id/text_gzms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="故障描述:"
            android:layout_below="@+id/view_descrip"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="卧室空调不制冷。按遥控器无反应"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/view_descrip"
            android:layout_marginLeft="@dimen/dp_120"
            android:layout_marginTop="@dimen/dp_15"
            />
        <ImageView
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:src="@mipmap/ic_launcher"
            android:layout_below="@+id/text_gzms"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            />

    </RelativeLayout>

      <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        >

    <RelativeLayout
        android:id="@+id/re_add"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        >
        <TextView
            android:id="@+id/text_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_address"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公祥街15号楼1-1302"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_below="@+id/text_add"
            android:layout_marginTop="@dimen/dp_20"
            android:background="#CCCCCC"
            />

    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_yuyuetime"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_below="@+id/re_add"
            >
            <TextView
                android:id="@+id/text_yuyuetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约时间:"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"
                />
            <TextView
                android:id="@+id/text_yytime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-09-11  12:20"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_below="@+id/text_yytime"
                android:layout_marginTop="@dimen/dp_20"
                android:background="#CCCCCC"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_lxr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_below="@+id/re_yuyuetime"
            >
            <TextView
                android:id="@+id/text_lxr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系人:"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"
                />
            <TextView
                android:id="@+id/text_zslxr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="丁一"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_below="@+id/text_zslxr"
                android:layout_marginTop="@dimen/dp_20"
                android:background="#CCCCCC"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/re_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_below="@+id/re_lxr"
            >
            <TextView
                android:id="@+id/text_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_phone"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"
                />
            <TextView
                android:id="@+id/text_zsphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_phone_number"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/dp_320"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentBottom="true"
            android:text="@string/pickerview_cancel"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            />
    </RelativeLayout>

</LinearLayout>