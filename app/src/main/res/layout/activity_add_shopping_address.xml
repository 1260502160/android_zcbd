<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.UpdateAddressActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_fangzhurenzheng_one"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/shape_login"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_name_add_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54"
            android:background="@null"
            android:drawableRight="@drawable/icon_address_book"
            android:hint="请输入收货人"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_10"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/et_name_add_address"
            android:background="@color/line_color" />

        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54"
            android:background="@null"
            android:hint="请输入手机号码"
            android:minWidth="@dimen/dp_100"
            android:paddingLeft="@dimen/dp_20"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/text_address_area"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/next"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:text="请选择所在地区"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line_color" />

        <EditText
            android:id="@+id/et_shopping_addre"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54"
            android:background="@null"
            android:hint="请输入详细地址"
            android:paddingLeft="@dimen/dp_20"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_54"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/renzheng_shape"
        android:text="保存"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_16" />

</LinearLayout>
