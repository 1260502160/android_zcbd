<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    tools:context=".activity.UpdateAddressActivity">

    <View
        android:id="@+id/view_fangzhurenzheng_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"
        android:layout_below="@+id/relative_change" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_fangzhurenzheng_one"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/shape_login">


        <RelativeLayout
            android:id="@+id/relative_phone_number"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">

            <TextView
                android:id="@+id/text_dingdan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_18"
                android:text="收货人"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/et_name_add_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@null"
                android:hint="请输入姓名"
                android:textColor="#000000"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:id="@+id/icon_mydingdan"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_17"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_marginRight="@dimen/dp_12"
                android:src="@mipmap/ic_launcher" />
        </RelativeLayout>

        <View
            android:id="@+id/view_setting_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/relative_phone_number"
            android:background="@color/transparent" />

        <RelativeLayout
            android:id="@+id/relative_safe_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_below="@+id/view_setting_two"
            android:layout_alignParentStart="true"
            android:layout_marginTop="0dp">

            <TextView
                android:id="@+id/text_qchc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_18"
                android:text="@string/text_phone_num"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_18"
                android:text="@string/text_phone_num"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/et_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_18"
                android:background="@null"
                android:hint="请输入手机号码"
                android:textSize="@dimen/sp_16"
                tools:text="@string/text_phone_number" />

        </RelativeLayout>


        <View
            android:id="@+id/view_shopping_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/relative_safe_password"
            android:background="@color/transparent" />


        <RelativeLayout
            android:id="@+id/relative_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_below="@+id/relative_safe_password"
            android:layout_alignParentStart="true"
            android:layout_marginStart="-2dp"
            android:layout_marginTop="1dp">

            <TextView
                android:id="@+id/text_address_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_12"
                android:text="@string/text_address_area"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_details_address_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_address_details"
                android:layout_toRightOf="@+id/text_address_area"
                android:gravity="right"
                tools:text="iowhdniohfiowghfuigbfagbuifgbaui" />

            <ImageView
                android:id="@+id/iv_address_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@mipmap/next" />

        </RelativeLayout>

        <View
            android:id="@+id/view_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/relative_address"
            android:background="@color/transparent" />

        <RelativeLayout
            android:id="@+id/relative_shopping_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_below="@+id/view_address"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/tv_shopping_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_12"
                android:text="收获地址"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/et_shopping_addre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_100"
                android:background="@null"
                android:hint="请输入详细地址"
                android:textSize="@dimen/sp_16"
                tools:text="北京市朝阳区公祥街社区15号楼1-1302" />

        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/renzheng_shape"
        android:text="保存"
        android:textColor="#ffffff" />

</LinearLayout>
