<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BaoXiuActivity"
    >


    <TextView
        android:id="@+id/tv_descrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_descrip"
        android:layout_below="@+id/relative_change"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_15"
        android:textSize="@dimen/sp_16"
        android:textColor="#666666"
        />
    <RelativeLayout
        android:id="@+id/re_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_240"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_below="@+id/tv_descrip"
        android:background="@drawable/shape_white"
        >

        <EditText
            android:id="@+id/edit_descrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请准确描述故障问题。"
            android:padding="@dimen/dp_10"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/grey"
            android:maxLength="200"
            />


        <TextView
            android:id="@+id/textnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/200"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_above="@+id/view_descrip"
            android:layout_marginBottom="@dimen/dp_10"
            />
        <View
            android:id="@+id/view_descrip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_centerVertical="true"
            android:background="#CCCCCC"
            />


            <ImageView
                android:id="@+id/icon_add"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_64"
                android:src="@mipmap/advice_add"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_below="@+id/view_descrip"

                />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:orientation="vertical"
        android:background="@drawable/shape_white"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_below="@+id/re_one"
        >

    <RelativeLayout
        android:id="@+id/re_add"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_address"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="@color/grey"
            android:textSize="@dimen/sp_16"
            />
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_42"
            android:layout_centerVertical="true"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"
            />
        <ImageView
            android:id="@+id/icon_add_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/next"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            />

    </RelativeLayout>
        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/re_add"
            android:background="#CCCCCC"
            />
        <RelativeLayout
            android:id="@+id/rela_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_below="@+id/v1"
            >
            <TextView
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_time"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp_16"
                />

            <TextView
                android:id="@+id/tv_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择"
                android:textSize="@dimen/sp_16"
                android:background="@null"
                android:textColor="@color/grey"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_42"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/icon_lianxiren_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/next"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>
        <View
            android:id="@+id/v2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/rela_time"
            android:background="#CCCCCC"
            />
        <RelativeLayout
            android:id="@+id/re_lianxiren"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_below="@+id/v2"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系人"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp_16"
                />
            <EditText
                android:id="@+id/edit_names"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:layout_marginLeft="@dimen/dp_55"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"
                />
            <ImageView
                android:id="@+id/icon_time_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/next"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <View
            android:id="@+id/v3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/re_lianxiren"
            android:background="#CCCCCC"
            />

        <RelativeLayout
            android:id="@+id/re_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_below="@+id/v3"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_phone"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp_14"
                />
            <EditText
                android:id="@+id/edit_phones"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:layout_marginLeft="@dimen/dp_55"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"
                />
            <ImageView
                android:id="@+id/icon_phone_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/next"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_centerVertical="true"

                />
        </RelativeLayout>


    </LinearLayout>



    <Button
        android:id="@+id/btn_baoxiu_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_14"
        android:background="@drawable/renzheng_shape"
        android:text="@string/btn_submit"
        android:textSize="@dimen/sp_16"
        android:textColor="#ffffff"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        />
</RelativeLayout>
